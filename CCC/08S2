#include <iostream>
#include <algorithm>
#include <cstring>
#include <cmath>

using namespace std;


int main()
{
    int r;
    while(cin>>r, r)
    {
        int cnt = 0;
        for(int i = 0; i< r; i++)
        {
            int y = floor(sqrt(r*r-i*i));
            cnt += y;
        }
            
                    
        cout<<4*cnt+1<<endl;
    }
    
    
    return 0;
}
